<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodAroundTheGlobe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodAroundTheGlobe.styles.css" asp-append-version="true" />
</head>
<body>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-lightgreen border-bottom box-shadow mb-3">
            <div class="container">
                

                        
                        

                        
                        <button class="navbar-toggler" type="button"
                                data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                                aria-controls="mainNavbar" aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        
                        <div id="mainNavbar" class="navbar-collapse collapse">
                            <ul class="navbar-nav mx-auto gap-3">
                                @* mx-auto = center; gap-3 = vaste tussenruimte *@
                        <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index" title="Home">
                            <img src="~/images/Kleinlogo.png" alt="Logo" height="30" />
                        </a>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Agenda">Agenda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/PlattegrondModel">Plattegrond</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/WorkshopModel">Workshop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/ContactModel">Contact</a>
                    </li>

                </ul>
                <partial name="_LoginPartial" />
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - FoodAroundTheGlobe - All Rights Reserved 
            <a asp-area="" asp-page="/Privacy">Privacy</a>
            <a asp-area="" asp-page="/ContactModel">Contact</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>